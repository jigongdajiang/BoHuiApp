    <color name="colorB2026BB5">#B2026BB5</color>
    <color name="color88026BB5">#88026BB5</color>
    <color name="colorB2FFFFFF">#B2FFFFFF</color>
    <color name="color00000000">#00000000</color>
    <color name="color55F5F5F5">#55F5F5F5</color>
    <color name="color88000000">#88000000</color>

    <!-- 系统部分 -->
    <!-- 主基色 -->
    <color name="sys_color_base">@color/color026BB5</color>
    <!-- 默认背景色，没有内容时的背景 -->
    <color name="sys_color_bg">@color/colorF5F5F5</color>
    <!-- 分割线颜色 -->
    <color name="sys_color_divider">@color/colorD1D1D1</color>
    <!-- 纯白色 -->
    <color name="sys_color_white">@color/colorFFFFFF</color>
    <!-- 全透明 -->
    <color name="sys_color_transparent">@color/color00000000</color>

    <!--字体—深黑-->
    <color name="sys_color_font_black">@color/color4A4A4A</color>
    <!--字体—浅黑-->
    <color name="sys_color_font_somber">@color/color848484</color>
    <!--字体—浅灰-->
    <color name="sys_color_font_light_gray">@color/colorA8A8A8</color>
    <!--字体—红-->
    <color name="sys_color_font_red">@color/colorFF4657</color>
    <!--字体—黄-->
    <color name="sys_color_font_yellow">@color/colorF6AB00</color>
    <!--字体-主题蓝 -->
    <color name="sys_color_font_blue">@color/sys_color_base</color>

    <!-- 系统状态栏颜色 -->
    <color name="sys_status_bar_color">#000000</color>


    <!-- operation部分 -->
    <!-- 通用对话框 使用到的距离值 -->
    <color name="dialog_title_content_color">@color/sys_color_font_black</color>
    <color name="dialog_divider_color">@color/sys_color_divider</color>
    <color name="dialog_btn_color">@color/sys_color_font_blue</color>
    <color name="dialog_bg">@color/sys_color_white</color>
    <!-- 默认标题 -->
    <color name="title_bar_bg_color">@color/colorFAFAFA</color>
    <color name="title_bar_main_text_color">@color/sys_color_base</color>
    <color name="title_bar_bottom_divider_color">@color/colorE0E0E0</color>
</resources>