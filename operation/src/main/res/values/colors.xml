    <color name="colorFAFAFA">#FAFAFA</color>
    <color name="color4A4A4A">#4A4A4A</color>
    <color name="color848484">#848484</color>
    <color name="colorA8A8A8">#A8A8A8</color>
    <color name="colorFF4657">#FF4657</color>
    <color name="colorF6AB00">#F6AB00</color>
    <color name="color026BB5">#026BB5</color>
    <color name="color462727">#462727</color>
    <color name="color426BF2">#426BF2</color>
    <color name="color37B2F3">#37B2F3</color>
    <color name="color1F7EC7">#1F7EC7</color>
    <color name="color095E9A">#095E9A</color>
