<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- App的基础距离值定义，包含两部分，
        基础值部分:
            该App所用的所有原始值。
            目的是为了应变，把系统全值级别的距离值的变更
        系统部分:
            具有公用意义的部分。主要是系统及通用的定义
            该部分值全部来自基础值，具体业务模块大部分引用的是该部分，极特殊没有意义的时候可能会引用基础值。
            目的是应用系统某一点资源之的变更，例如所有原来为10dp的公共padding变为15dp

        operation部分:
            在该层的一些公共具体控件的值的定义
            例如通用对话框的资源值，明确的系统及字号。
     -->

    <!-- 基础值部分 -->
    <color name="color_FF4081">#FF4081</color>
    <color name="color_3D3D3D">#3D3D3D</color>
    <color name="color_848484">#848484</color>
    <color name="color_A8A8A8">#A8A8A8</color>
    <color name="color_D1D1D1">#D1D1D1</color>
    <color name="color_E0E0E0">#E0E0E0</color>
    <color name="color_F2F2F2">#F2F2F2</color>
    <color name="color_F7B00E">#F7B00E</color>
    <color name="color_F4584D">#F4584D</color>
    <color name="color_FFFFFF">#FFFFFF</color>


    <color name="color_00000000">#00000000</color>

    <!-- 系统部分 -->
    <!-- 主基色 -->
    <color name="sys_color_base">@color/color_FF4081</color>
    <!-- 背景色-->
    <color name="sys_color_bg">@color/color_F2F2F2</color>
    <!-- 线用色 -->
    <color name="sys_color_divider">@color/color_E0E0E0</color>
    <!-- 完成灰 -->
    <color name="sys_color_gray">@color/color_D1D1D1</color>
    <!-- 辅色-黄 -->
    <color name="sys_color_help_yellow">@color/color_F7B00E</color>
    <!-- 辅色-红 -->
    <color name="sys_color_help_red">@color/color_F4584D</color>
    <!-- 黑 -->
    <color name="sys_color_black">@color/color_3D3D3D</color>
    <!-- 浅黑 -->
    <color name="sys_color_somber">@color/color_848484</color>
    <!-- 浅灰-->
    <color name="sys_color_light_gray">@color/color_A8A8A8</color>
    <!-- 全透明 -->
    <color name="sys_color_transparent">@color/color_00000000</color>
    <!-- 纯白 -->
    <color name="sys_color_white">@color/color_FFFFFF</color>


    <!-- 字体-黑 -->
    <color name="sys_color_font_black">@color/sys_color_black</color>
    <!-- 字体-浅黑 -->
    <color name="sys_color_font_somber">@color/sys_color_somber</color>
    <!-- 字体—浅灰-->
    <color name="sys_color_font_light_gray">@color/sys_color_light_gray</color>
    <!--字体—红-->
    <color name="sys_color_font_red">@color/sys_color_help_red</color>
    <!--字体—黄-->
    <color name="sys_color_font_yellow">@color/sys_color_help_yellow</color>
    <!--字体-主题蓝 -->
    <color name="sys_color_font_blue">@color/sys_color_base</color>
    <!--字体-纯白 -->
    <color name="sys_color_font_white">@color/sys_color_white</color>

    <!-- 系统状态栏颜色 -->
    <color name="sys_status_bar_color">@color/sys_color_black</color>


    <!-- operation部分 -->
    <!-- 通用对话框 使用到的距离值 -->
    <color name="dialog_title_content_color">@color/sys_color_font_black</color>
    <color name="dialog_divider_color">@color/sys_color_divider</color>
    <color name="dialog_btn_color">@color/sys_color_font_blue</color>
    <color name="dialog_bg">@color/sys_color_bg</color>
    <!-- 默认标题 -->
    <color name="title_bar_bg_color">@color/sys_color_bg</color>
    <color name="title_bar_main_text_color">@color/sys_color_base</color>
    <color name="title_bar_bottom_divider_color">@color/sys_color_divider</color>
</resources>