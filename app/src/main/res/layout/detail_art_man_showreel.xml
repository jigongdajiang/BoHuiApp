<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/sys_color_bg">
    <android.support.v7.widget.CardView
        android:id="@+id/card_showreel"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_120"
        app:cardCornerRadius="@dimen/dp_5"
        android:layout_centerInParent="true"
        android:background="@color/sys_color_content_bg">
        <ImageView
            android:id="@+id/iv_fengmian"
            android:layout_width="@dimen/dp_110"
            android:layout_height="@dimen/dp_110"
            android:layout_gravity="center"
            android:src="@drawable/img_temp_1"
            android:scaleType="centerInside"/>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_88888888"
            android:layout_gravity="bottom"
            android:text="国画/山水"
            android:gravity="center"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/sys_color_font_white"
            android:padding="@dimen/dp_5"/>
    </android.support.v7.widget.CardView>

</RelativeLayout>