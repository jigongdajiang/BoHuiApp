<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/sys_color_content_bg"
    android:padding="@dimen/sys_padding">
    <TextView
        android:id="@+id/tv_order_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="国画-山水画"
        android:textSize="@dimen/sys_font_size_middle"
        android:textColor="@color/sys_color_font_black"/>
    <TextView
        android:layout_below="@+id/tv_order_type"
        android:id="@+id/tv_order_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="清明上河图"
        android:textSize="@dimen/sys_font_size_middle"
        android:textColor="@color/sys_color_font_light_gray"
        android:layout_marginTop="@dimen/dp_5"/>
    <TextView
        android:layout_below="@+id/tv_order_name"
        android:id="@+id/tv_order_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2017-12-12 17：35"
        android:textSize="@dimen/sys_font_size_middle"
        android:textColor="@color/sys_color_font_light_gray"
        android:layout_marginTop="@dimen/dp_20" />
    <TextView
        android:id="@+id/tv_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_5"
        android:paddingRight="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/shape_attention_un"
        android:text="取消定制"
        android:textSize="@dimen/sp_10"
        android:textColor="@color/sys_color_font_white"/>

</RelativeLayout>