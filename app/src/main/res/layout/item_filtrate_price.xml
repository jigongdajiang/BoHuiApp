<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/sys_color_content_bg"
    android:orientation="vertical"
    android:paddingLeft="@dimen/sys_padding"
    android:paddingRight="@dimen/sys_padding">

    <TextView
        android:id="@+id/tv_des"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:gravity="center_vertical"
        android:text="价格区间"
        android:textColor="@color/sys_color_font_black"
        android:textSize="@dimen/sys_font_size_small" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginBottom="@dimen/sys_margin"
        android:layout_marginLeft="@dimen/sys_margin"
        android:layout_marginRight="@dimen/sys_margin"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_price1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@null"
            android:hint="最低价"
            android:inputType="numberDecimal"
            android:textColor="@color/sys_color_font_black"
            android:textSize="@dimen/sys_font_size_middle" />

        <View
            android:layout_width="30dp"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/sys_margin"
            android:layout_marginRight="@dimen/sys_margin"
            android:background="@color/sys_color_divider" />

        <EditText
            android:id="@+id/et_price2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@null"
            android:hint="最高价"
            android:inputType="numberDecimal"
            android:textColor="@color/sys_color_font_black"
            android:textSize="@dimen/sys_font_size_middle" />

    </LinearLayout>
</LinearLayout>