<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sys_color_bg">
    <LinearLayout
        android:id="@+id/ll_sequence"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/sys_color_content_bg"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3">
            <RelativeLayout
                android:id="@+id/rl_common"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_common"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="综合"
                    android:textColor="@color/sys_color_font_base"
                    android:textSize="@dimen/sys_font_size_middle"
                    android:layout_centerInParent="true"
                    android:drawableRight="@mipmap/ic_arrow_down"
                    android:drawablePadding="@dimen/dp_5"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_fans"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_fans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="人气"
                    android:textColor="@color/sys_color_font_black"
                    android:textSize="@dimen/sys_font_size_middle"
                    android:layout_centerInParent="true"
                    android:drawableRight="@mipmap/ic_arrow_down"
                    android:drawablePadding="@dimen/dp_5"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_price"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="价格"
                    android:textColor="@color/sys_color_font_black"
                    android:textSize="@dimen/sys_font_size_middle"
                    android:layout_centerInParent="true"
                    android:drawableRight="@mipmap/ic_arrow_down"
                    android:drawablePadding="@dimen/dp_5"/>
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rl_filtrate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_filtrate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="筛选"
                android:textColor="@color/sys_color_font_base"
                android:textSize="@dimen/sys_font_size_middle"
                android:drawableRight="@mipmap/ic_filtrate"
                android:drawablePadding="@dimen/dp_5"/>
        </RelativeLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/sys_margin_small"
            >

        </android.support.v7.widget.RecyclerView>
        <LinearLayout
            android:id="@+id/ll_common_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp_1"
            android:background="@color/sys_color_transparent"
            android:visibility="gone">
            <LinearLayout
                android:id="@+id/ll_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/sys_color_content_bg"
                android:visibility="gone">
                <TextView
                    android:id="@+id/tv_xinpin"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:paddingLeft="@dimen/sys_margin"
                    android:text="新品优先"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/sys_font_size_small"/>
                <View
                    style="@style/divider_line_full_hor"/>
                <TextView
                    android:id="@+id/tv_recommend"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:paddingLeft="@dimen/sys_margin"
                    android:text="推荐优先"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/sys_font_size_small"/>
            </LinearLayout>

            <View
                android:id="@+id/v_shadow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_88888888"
                android:visibility="gone"/>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>