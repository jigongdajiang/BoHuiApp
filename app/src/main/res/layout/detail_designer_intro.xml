<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/sys_color_content_bg"
    android:orientation="vertical"
    android:padding="@dimen/sys_padding">
    <TextView
        android:id="@+id/tv_cn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="北京  9年工作经验"
        android:textColor="@color/sys_color_font_black"
        android:textSize="@dimen/sys_font_size_large"
        android:paddingTop="@dimen/sys_padding_small"
        android:paddingBottom="@dimen/sys_padding_small"/>
    <View
        style="@style/divider_line_full_hor"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/sys_padding_small"
        android:paddingBottom="@dimen/sys_padding_small"
        android:textSize="@dimen/sys_font_size_middle"
        android:textColor="@color/sys_color_font_somber"
        android:text="明星机构"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="擅长领域"
        android:textColor="@color/sys_color_font_black"
        android:textSize="@dimen/sys_font_size_large"
        android:paddingTop="@dimen/sys_padding_small"
        android:paddingBottom="@dimen/sys_padding_small"/>
    <View
        style="@style/divider_line_full_hor"/>
    <TextView
        android:id="@+id/tv_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/sys_padding_small"
        android:paddingBottom="@dimen/sys_padding_small"
        android:textSize="@dimen/sys_font_size_middle"
        android:textColor="@color/sys_color_font_light_gray"
        android:text="国画-山水  国画-山水"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="擅长风格"
        android:textColor="@color/sys_color_font_black"
        android:textSize="@dimen/sys_font_size_large"
        android:paddingTop="@dimen/sys_padding_small"
        android:paddingBottom="@dimen/sys_padding_small"/>
    <View
        style="@style/divider_line_full_hor"/>
    <TextView
        android:id="@+id/tv_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/sys_padding_small"
        android:paddingBottom="@dimen/sys_padding_small"
        android:textSize="@dimen/sys_font_size_middle"
        android:textColor="@color/sys_color_font_somber"
        android:text="啊私搭乱建撒来得及爱上了建档立卡"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TA的详情"
        android:textColor="@color/sys_color_font_black"
        android:textSize="@dimen/sys_font_size_large"
        android:paddingTop="@dimen/sys_padding_small"
        android:paddingBottom="@dimen/sys_padding_small"/>
    <View
        style="@style/divider_line_full_hor"/>
    <TextView
        android:id="@+id/tv_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/sys_padding_small"
        android:paddingBottom="@dimen/sys_padding_small"
        android:textSize="@dimen/sys_font_size_middle"
        android:textColor="@color/sys_color_font_somber"
        android:text="啊私搭乱建撒来得及爱上了建档立卡"/>

</LinearLayout>