<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_40"
    android:orientation="vertical"
    android:background="@color/sys_color_bg">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/sys_color_content_bg"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_type_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="@dimen/sys_font_size_large"
                    android:textColor="@color/sys_color_font_black"
                    android:text="国画"/>
                <ImageView
                    android:layout_toRightOf="@+id/tv_type_top"
                    android:layout_marginLeft="@dimen/sys_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_more"
                    android:layout_centerVertical="true"/>
        </RelativeLayout>

</LinearLayout>
