<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sys_color_bg">

    <com.widget.smallelement.dropdown.DropDownMenu
        android:id="@+id/dropDownMenu"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:ddmenuTextSize="13sp"
        app:ddtextUnselectedColor="@color/sys_color_font_black"
        app:ddtextSelectedColor="@color/sys_color_font_base"
        app:dddividerColor="@color/sys_color_divider"
        app:ddunderlineColor="@color/sys_color_divider"
        app:ddmenuMenuHeightPercent="0.5"
        app:ddmenuSelectedIcon="@mipmap/ic_arrow_up"
        app:ddmaskColor="@color/color_88888888"
        app:ddmenuBackgroundColor="@color/sys_color_bg"
        app:ddmenuUnselectedIcon="@mipmap/ic_arrow_down"
        />
</LinearLayout>