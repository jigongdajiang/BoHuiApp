<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sys_color_content_bg"
    android:padding="@dimen/sys_padding">
    <ImageView
        android:id="@+id/iv_art"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        android:src="@drawable/img_temp_1"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"/>

    <RelativeLayout
        android:id="@+id/rel_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_art"
        android:layout_alignBottom="@+id/iv_art"
        android:layout_toRightOf="@+id/iv_art"
        android:layout_marginLeft="@dimen/sys_margin">
        <TextView
            android:id="@+id/tv_art_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="喜上枝头-齐白石作品"
            android:textSize="@dimen/sys_font_size_middle"
            android:textColor="@color/sys_color_font_black"/>
        <TextView
            android:id="@+id/tv_art_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥ 12365"
            android:textSize="@dimen/sys_font_size_middle"
            android:textColor="@color/sys_color_font_base"
            android:layout_above="@+id/ll_attr"
            android:layout_marginBottom="@dimen/dp_5"
            android:visibility="visible"/>
        <LinearLayout
            android:id="@+id/ll_attr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_attr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000cm*1000cm"
                android:textColor="@color/sys_color_font_light_gray"/>
            <TextView
                android:id="@+id/tv_eye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="127人浏览"
                android:layout_marginLeft="@dimen/dp_10"
                android:textColor="@color/sys_color_font_light_gray"/>
            <ImageView
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_10"
                android:src="@mipmap/ic_eye"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>