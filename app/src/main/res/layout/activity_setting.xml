<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sys_color_bg">
    <RelativeLayout
        android:id="@+id/rl_password_change"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:paddingLeft="@dimen/sys_padding"
        android:background="@color/sys_color_content_bg">
        <TextView
            android:id="@+id/tv_password_change"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="修改密码"
            android:gravity="center"
            android:textSize="@dimen/sys_font_size_middle"
            android:textColor="@color/sys_color_font_black" />
        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_arrow_right_2"
            android:layout_marginRight="@dimen/sys_margin"/>
    </RelativeLayout>
    <View
        style="@style/divider_line_full_hor"
        android:layout_marginLeft="@dimen/sys_margin"/>
    <RelativeLayout
        android:id="@+id/rl_suggest"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:paddingLeft="@dimen/sys_padding"
        android:background="@color/sys_color_content_bg">
        <TextView
            android:id="@+id/tv_suggest"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="咨询建议"
            android:gravity="center"
            android:textSize="@dimen/sys_font_size_middle"
            android:textColor="@color/sys_color_font_black" />
        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_arrow_right_2"
            android:layout_marginRight="@dimen/sys_margin"/>
    </RelativeLayout>
    <View
        style="@style/divider_line_full_hor"
        android:layout_marginLeft="@dimen/sys_margin"/>
    <RelativeLayout
        android:id="@+id/rl_update"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:paddingLeft="@dimen/sys_padding"
        android:background="@color/sys_color_content_bg">
        <TextView
            android:id="@+id/tv_update"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="版本检测"
            android:gravity="center"
            android:textSize="@dimen/sys_font_size_middle"
            android:textColor="@color/sys_color_font_black" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_exit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:paddingLeft="@dimen/sys_padding"
        android:layout_marginTop="@dimen/sys_margin_large"
        android:background="@color/sys_color_content_bg">
        <TextView
            android:id="@+id/tv_exit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="版本退出登录"
            android:gravity="center"
            android:textSize="@dimen/sys_font_size_middle"
            android:textColor="@color/sys_color_font_black" />

    </RelativeLayout>
</LinearLayout>