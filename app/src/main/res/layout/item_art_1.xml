<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/sys_color_content_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/feng_main_img_bg"
        android:scaleType="centerInside"
        android:src="@drawable/img_temp_1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sys_margin_small"
        android:layout_marginBottom="@dimen/sys_margin_small">

        <TextView
            android:id="@+id/tv_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="国画山水"
            android:textColor="@color/sys_color_font_somber"
            android:textSize="@dimen/sys_font_size_small" />

        <TextView
            android:id="@+id/tv_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            android:paddingTop="@dimen/dp_2"
            android:paddingBottom="@dimen/dp_2"
            android:layout_alignParentRight="true"
            android:textColor="@color/sys_color_font_white"
            android:textSize="@dimen/sys_font_size_small"
            android:layout_marginRight="@dimen/sys_margin_small"
            android:background="@drawable/shape_lable_bg"
            android:visibility="gone"/>
    </RelativeLayout>
</LinearLayout>