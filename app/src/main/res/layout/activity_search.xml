<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sys_color_bg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/sys_color_content_bg"
        >
        <LinearLayout
            android:layout_toLeftOf="@+id/ll_message"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/et_bg">
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_marginLeft="@dimen/sys_margin"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_arrow_left"/>
            <ImageView
                android:layout_marginLeft="@dimen/sys_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_search_2"
                android:layout_gravity="center_vertical" />
            <EditText
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请输入设计师/艺术家/作品名称"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:layout_marginLeft="@dimen/sys_margin_small"
                android:layout_marginRight="@dimen/sys_margin_small"
                android:textSize="@dimen/sys_font_size_middle"
                android:textColor="@color/sys_color_font_black"
                android:background="@null"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="搜索"
            android:textSize="@dimen/sys_font_size_small"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:background="@color/sys_color_content_bg"
            android:paddingLeft="@dimen/sys_padding"
            android:paddingRight="@dimen/sys_padding"
            android:textColor="@color/sys_color_font_light_gray"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="热门搜索"
        android:layout_marginLeft="@dimen/sys_margin"
        android:layout_marginTop="@dimen/sys_margin"
        android:textSize="@dimen/sys_font_size_large"
        android:textColor="@color/sys_color_font_black"/>
    <View
        style="@style/divider_line_full_hor"
        android:layout_marginLeft="@dimen/sys_margin"
        android:layout_marginRight="@dimen/sys_margin"
        android:layout_marginTop="@dimen/sys_margin_small"
        />
    <com.widget.smallelement.flowtag.TagFlowLayout
        android:id="@+id/tag_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sys_margin"
        android:layout_marginRight="@dimen/sys_margin"
        app:max_select="1">

    </com.widget.smallelement.flowtag.TagFlowLayout>
</LinearLayout>