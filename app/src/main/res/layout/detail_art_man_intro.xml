<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/sys_color_content_bg"
    android:orientation="vertical"
    android:padding="@dimen/sys_padding">
    <TextView
        android:id="@+id/tv_art_man_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="国家级艺术家"
        android:textColor="@color/sys_color_font_black"
        android:textSize="@dimen/sys_font_size_large"
        android:paddingTop="@dimen/sys_padding_small"
        android:paddingBottom="@dimen/sys_padding_small"/>
    <View
        style="@style/divider_line_full_hor"/>
    <TextView
        android:id="@+id/tv_art_man_level_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/sys_padding_small"
        android:paddingBottom="@dimen/sys_padding_small"
        android:textSize="@dimen/sys_font_size_middle"
        android:textColor="@color/sys_color_font_somber"
        android:text="为明星机构为明星机构为明星机构为明星机构为明星机构为明星机构为明星机构为明星机构为明星机构为明星机构"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="艺术风格"
        android:textColor="@color/sys_color_font_black"
        android:textSize="@dimen/sys_font_size_large"
        android:paddingTop="@dimen/sys_padding_small"
        android:paddingBottom="@dimen/sys_padding_small"
        android:visibility="gone"/>
    <View
        style="@style/divider_line_full_hor"
        android:visibility="gone"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/sys_padding_small"
        android:paddingBottom="@dimen/sys_padding_small"
        android:textSize="@dimen/sys_font_size_middle"
        android:textColor="@color/sys_color_font_light_gray"
        android:text="国画-山水  国画-山水"
        android:visibility="gone"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="艺术格言"
        android:textColor="@color/sys_color_font_black"
        android:textSize="@dimen/sys_font_size_large"
        android:paddingTop="@dimen/sys_padding_small"
        android:paddingBottom="@dimen/sys_padding_small"/>
    <View
        style="@style/divider_line_full_hor"/>
    <TextView
        android:id="@+id/tv_pro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/sys_padding_small"
        android:paddingBottom="@dimen/sys_padding_small"
        android:textSize="@dimen/sys_font_size_middle"
        android:textColor="@color/sys_color_font_somber"
        android:text="啊私搭乱建撒来得及爱上了建档立卡"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TA的详情"
        android:textColor="@color/sys_color_font_black"
        android:textSize="@dimen/sys_font_size_large"
        android:paddingTop="@dimen/sys_padding_small"
        android:paddingBottom="@dimen/sys_padding_small"/>
    <View
        style="@style/divider_line_full_hor"/>
    <TextView
        android:id="@+id/tv_detail_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/sys_padding_small"
        android:paddingBottom="@dimen/sys_padding_small"
        android:textSize="@dimen/sys_font_size_middle"
        android:textColor="@color/sys_color_font_somber"
        android:text="按时打算大所大所大所大所大所多按时打算打算打算的大叔大婶大所多大所大所大所"/>

