<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sys_color_content_bg">
    <RelativeLayout
        android:id="@+id/rl_art_man_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
        <View
            android:id="@+id/v_div"
            android:layout_width="5dp"
            android:layout_height="@dimen/dp_30"
            android:background="@color/sys_color_base"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/sys_margin_small"/>
        <TextView
            android:id="@+id/tv_type_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sys_font_size_middle"
            android:textColor="@color/sys_color_font_somber"
            android:layout_toRightOf="@+id/v_div"
            android:layout_marginLeft="@dimen/sys_margin_small"
            android:layout_centerVertical="true"
            android:text="国画"/>

    </RelativeLayout>
    <View
        style="@style/divider_line_full_hor"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sys_color_content_bg"
        >
        <HorizontalScrollView
            android:id="@+id/hsv_arts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sys_margin"
            android:layout_toLeftOf="@+id/iv_more"
            android:layout_marginRight="@dimen/sys_margin_small"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <GridView
                    android:id="@+id/gv_art_man_arts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:listSelector="@color/sys_color_transparent">

                </GridView>
            </LinearLayout>
        </HorizontalScrollView>
        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_more"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/sys_margin"/>
    </RelativeLayout>

</LinearLayout>