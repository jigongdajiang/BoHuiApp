    <!-- 系统Loading框 -->
    <dimen name="dialog_loading_wh">@dimen/dp_55</dimen>
    <dimen name="dialog_loading_img_margin_bt">@dimen/sys_margin</dimen>
    <dimen name="dialog_loading_img_wh">@dimen/dp_30</dimen>
    <dimen name="dialog_loading_radius">@dimen/dp_10</dimen>
    <dimen name="dialog_loading_stroke_w">@dimen/dp_1</dimen>

    <!-- 系统字体 -->
    <dimen name="sys_font_size_small">@dimen/sp_13</dimen>
    <dimen name="sys_font_size_middle">@dimen/sp_15</dimen>
    <dimen name="sys_font_size_large">@dimen/sp_17</dimen>

    <!-- 系统按钮背景圆角 -->
    <dimen name="sys_btn_bg_radius">@dimen/dp_5</dimen>


    <!-- operation部分 -->
    <!-- 通用对话框 使用到的距离值 -->
    <dimen name="dialog_out_margin_lr">@dimen/sys_margin_large</dimen>
    <dimen name="dialog_title_margin_tb">@dimen/sys_margin</dimen>
    <dimen name="dialog_message_margin">@dimen/sys_margin</dimen>
    <dimen name="dialog_btn_padding">@dimen/sys_padding</dimen>
    <dimen name="dialog_btn_divider_width">@dimen/sys_divider_width_small</dimen>
    <dimen name="dialog_title_font_size">@dimen/sys_font_size_large</dimen>
    <dimen name="dialog_message_font_size">@dimen/sys_font_size_middle</dimen>
    <dimen name="dialog_btn_font_size">@dimen/sys_font_size_large</dimen>

    <!-- 标题栏 -->
    <dimen name="title_bar_height">@dimen/dp_50</dimen>
    <dimen name="title_bar_left_padding">@dimen/sys_padding</dimen>
    <dimen name="title_bar_left_img_width">@dimen/dp_13</dimen>
    <dimen name="title_bar_left_img_height">@dimen/dp_24</dimen>
    <dimen name="title_bar_left_text_padding">@dimen/sys_widget_padding</dimen>
    <dimen name="title_bar_lr_font_size">@dimen/sys_font_size_middle</dimen>
    <dimen name="title_bar_title_font_size">@dimen/sys_font_size_large</dimen>
    <dimen name="title_bar_center_img_wh">@dimen/dp_30</dimen>
    <dimen name="title_bar_right_lr_padding">@dimen/sys_padding</dimen>
    <dimen name="title_bar_right_bottom_padding">@dimen/sys_widget_padding</dimen>
    <dimen name="title_bar_right_font_size">@dimen/sp_15</dimen>
    <dimen name="title_bar_right_img_wh">@dimen/dp_21</dimen>
    <dimen name="title_bar_right_img_margin_right">@dimen/sys_margin</dimen>
    <dimen name="title_bar_right_img_margin_right2">@dimen/sys_margin_small</dimen>
    <dimen name="title_bar_divider_height">@dimen/sys_divider_width_small</dimen>

    <!-- 欢迎页 -->
    <dimen name="welcome_dot_area_margin_bottom">@dimen/sys_margin_large</dimen>
    <dimen name="welcome_dot_padding">@dimen/sys_padding_small</dimen>
    <dimen name="welcome_start_btn_width">@dimen/dp_160</dimen>
    <dimen name="welcome_start_btn_height">@dimen/dp_40</dimen>
    <dimen name="welcome_start_btn_text_size">@dimen/sp_18</dimen>
    <dimen name="welcome_start_btn_margin_bottom">@dimen/dp_30</dimen>

    <!-- 首页 -->
    <dimen name="main_tab_height">@dimen/dp_50</dimen>
    <dimen name="main_tab_content_height">@dimen/dp_50</dimen>
    <dimen name="main_tab_padding_bottom">@dimen/dp_3</dimen>
    <dimen name="main_tab_padding_top">@dimen/dp_6</dimen>
    <dimen name="main_tab_text_size">@dimen/sp_10</dimen>

</resources>